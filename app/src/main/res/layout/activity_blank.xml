<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.richard.imoh.collab.Activities.BlankActivity">
    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/onboard_linear"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

   <Button
       android:layout_marginLeft="10dp"
       android:onClick="onBoardPrev"
       android:visibility="invisible"
       android:textSize="17sp"
       android:background="@android:color/transparent"
       android:textColor="#fff"
       android:text="Previous"
       android:id="@+id/onboard_previous_btn"
       android:layout_alignParentLeft="true"
       android:layout_alignParentBottom="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <Button
        android:onClick="onBoardNext"
        android:textSize="17sp"
        android:background="@android:color/transparent"
        android:textColor="#fff"
        android:text="Next"
        android:id="@+id/onboard_next_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
