<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.richard.imoh.collab.Request.AddRequest">
    <RelativeLayout
        android:id="@+id/add_prop_first_relative"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:textColor="#FFF"
            android:id="@+id/ftextview"
            android:textSize="30sp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POST REQUEST"/>
        <android.support.v7.widget.CardView
            android:id="@+id/fcard"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="-25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ftextview"
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_margin="10dp"
                    android:entries="@array/property_purpose_array"
                    android:id="@+id/add_prop_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <Spinner
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_margin="10dp"
                    android:id="@+id/add_prop_prop_type"
                    android:entries="@array/property_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <EditText
                    android:id="@+id/add_prop_plots"
                    android:inputType="number"
                    android:hint="Number or rooms/Plots if land"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <Spinner
                    android:id="@+id/add_prop_state"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_margin="10dp"
                    android:entries="@array/location_state"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <Spinner
                    android:id="@+id/add_prop_city"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_margin="10dp"
                    android:entries="@array/location_city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:onClick="reqBtn1"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:text="Next"
            android:textSize="25sp"
            android:layout_below="@id/fcard"
            android:background="@drawable/rounded_rectangle_orange"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_prop_second_relative"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:textColor="#FFF"
            android:id="@+id/stextview"
            android:textSize="30sp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POST REQUEST"/>
        <android.support.v7.widget.CardView
            android:id="@+id/scard"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="-25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/stextview"
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_margin="10dp"
                    android:entries="@array/let_type_array"
                    android:id="@+id/add_prop_let_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <EditText
                    android:id="@+id/add_prop_price"
                    android:inputType="number"
                    android:hint="Price per year"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <Spinner
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_margin="10dp"
                    android:id="@+id/add_prop_priority"
                    android:entries="@array/priority"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <EditText
                    android:id="@+id/add_prop_description"
                    android:inputType="text"
                    android:hint="Any Other Information that we missed..?"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:onClick="reqBtn2"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:text="FINISH"
            android:textSize="20sp"
            android:layout_below="@id/scard"
            android:background="@drawable/rounded_rectangle_orange"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
