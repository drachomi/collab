<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/req_first_liner"
    android:layout_alignParentLeft="true"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:id="@+id/req_dp"
        android:src="@drawable/richy"
        android:layout_width="50dp"
        android:layout_height="70dp" />
</LinearLayout>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/req_first_liner"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:id="@+id/req_title"
            android:textSize="18sp"
            android:text="2 Bedroom Apartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:textSize="16sp"
            android:id="@+id/req_let_type"
            android:text="For Rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:textSize="16sp"
            android:id="@+id/req_location"
            android:text="Yaba Lagos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15sp"
            android:id="@+id/req_agent_name"
            android:text="Chukwuma Ibeh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/req_price"
            android:text="20k- 3000k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/req_chat"
            android:src="@drawable/chat_icon"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/req_chat"
            android:id="@+id/req_time"
            android:text="2d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
</android.support.v7.widget.CardView>