<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:layout_alignParentLeft="true"
        android:src="@drawable/richy"
        android:id="@+id/follower_list_img"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/follower_list_img"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/follower_list_displayname"
            android:text="Imoh Richard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/follower_list_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_menu"
        android:layout_width="50dp"
        android:layout_height="50dp" />

</RelativeLayout>