<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.hbb20.GThumb
        android:id="@+id/chat_list_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:src="@drawable/richy"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/chat_list_display_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Content"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorSecondaryText"
        android:layout_below="@+id/chat_list_displayname"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="67dp"
        android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center_vertical"
            android:textSize="19sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_alignTop="@+id/chat_list_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="67dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"
            android:id="@+id/chat_list_displayname"
            android:text="Imoh Richard"
             />



    <LinearLayout
        android:layout_marginTop="-25dp"
        android:layout_below="@+id/chat_list_displayname"
        android:layout_alignRight="@+id/chat_list_display_msg"
        android:layout_alignEnd="@+id/chat_list_display_msg"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/chat_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="22:30" />
        <TextView
            android:textAlignment="center"
            android:id="@+id/chat_indicator"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/rounded_rectangle_orange"
            />

    </LinearLayout>





</RelativeLayout>